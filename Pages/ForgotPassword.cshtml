@page
@model WebApplication1.Pages.ForgotPasswordModel

<h2>Forgot Password</h2>
<form method="post">
    <div>
        <label>Email:</label>
        <input type="email" asp-for="Email" required />
    </div>
    <button type="submit">Send Reset Link</button>
</form>
@if (TempData["ResetLink"] != null)
{
    <p>Reset Link (for testing): <a href="@TempData["ResetLink"]">Click here</a></p>
}