@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="OnPostAsync" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- First Name -->
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <!-- Last Name -->
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <!-- Credit Card Number -->
            <div class="form-group">
                <label asp-for="Input.CreditCardNo"></label>
                <input asp-for="Input.CreditCardNo" class="form-control" />
                <span asp-validation-for="Input.CreditCardNo" class="text-danger"></span>
            </div>

            <!-- Mobile Number -->
            <div class="form-group">
                <label asp-for="Input.MobileNumber"></label>
                <input asp-for="Input.MobileNumber" class="form-control" />
                <span asp-validation-for="Input.MobileNumber" class="text-danger"></span>
            </div>

            <!-- Billing Address -->
            <div class="form-group">
                <label asp-for="Input.BillingAddress"></label>
                <input asp-for="Input.BillingAddress" class="form-control" />
                <span asp-validation-for="Input.BillingAddress" class="text-danger"></span>
            </div>

            <!-- Shipping Address -->
            <div class="form-group">
                <label asp-for="Input.ShippingAddress"></label>
                <input asp-for="Input.ShippingAddress" class="form-control" />
                <span asp-validation-for="Input.ShippingAddress" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Photo Upload -->
            <div class="form-group">
                <label asp-for="Input.Photo"></label>
                <input asp-for="Input.Photo" type="file" class="form-control" />
                <span asp-validation-for="Input.Photo" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}